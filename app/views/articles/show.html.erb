<div class="container-fluid" style="background-color: beige">
  <div class="row">
    <div class="col-9">
      <h1><%= @article.title %></h1>
    </div>

    <div class="col-3">
      <ul>
      <li><%= link_to "Edit", edit_article_path(@article) %></li>
      <li><%= link_to "Delete", article_path(@article),
                      method: :delete,
                      data: { confirm: "Are you sure?" } %></li>
      </ul>
    </div>
  </div>

  <div class="row fs-4">
    <p><%= @article.body %></p>
  </div>

  <div class="row" style="background-color: none">
    <h2>Comments</h2>
    <%= render @article.comments %>
  </div>

  <div class="row">
    <h2>Add a comment:</h2>
    <%= render 'comments/form' %>
  </div>  

</div>