<div class="container-fluid p-4 color">
  <div class="row">
    <h1>Home</h1>
    <p>Most Recent Articles</p>
    <br>
    <br>
    <br>
  </div>
 
  <% if Current.user %>
    Logged in as: <%= Current.user.email %><br>
    <%= link_to 'Edit Password', edit_password_path %>
    <%= button_to 'Logout', logout_path, method: :delete %>
    <% else %>
    <%= link_to 'Sign Up', sign_up_path %>
    or
    <%= link_to 'Login', sign_in_path %>
  <% end %>

  <ol class="list-group-flush list-group-numbered row">
    <% @recent_articles.each do |article| %>
      <%= render partial: "shared/article_list_item" , locals: {article: article}%>
    <% end %>
  </ol>
</div>


