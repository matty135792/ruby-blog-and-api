<p id="notice"><%= notice %></p>

<% if Current.user && Current.user.has_permission?('admin') %>
  <h1>admin</h1>
<% end %>
<h1>Users</h1>

<table class="table table-striped table-hover table-dark">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Login</th>
      <th scope="col">Permissions</th>
      <th colspan="3" scope="col"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <th scope="row"><%= user.name %></th>
        <td><%= user.email %></td>
        <td><%= user.login %></td>
        <td><%= user.permissions.pluck(:title) %></td>
        <td><span><%= link_to "Show", user, class:"btn btn-primary" %></span></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
