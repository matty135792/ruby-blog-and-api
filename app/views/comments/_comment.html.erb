<div class="row">
  <div class="col-2 text-break" style="background-color: none">
    <p>
      <strong><%= comment.commenter %>: </strong><%= comment.body %>
    </p>
  </div>
  <div class="col-8" style="background-color: none">
  </div>

  <div class="col" style="background-color: none">
    <p>
      <%= link_to 'Delete Comment', [comment.article, comment],
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
    </p>
  </div>
</div>